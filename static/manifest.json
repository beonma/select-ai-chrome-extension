{
    "manifest_version": 3,
    "name": "RephraseMe",
    "version": "0.0.1",
    "description": "this extension rephrases what ever you give it to it",
    "action": {
        "default_popup": "popup.html",
        "default_title": "RephraseMe"
    },
    "permissions": ["storage"],
    "content_scripts": [
        {
            "js": ["content.bundle.js"],
            "css": ["content.bundle.css"],
            "matches": ["<all_urls>"]
        }
    ],
    "background": {
        "service_worker": "service-worker.bundle.js"
    },
    "web_accessible_resources": [
        {
            "matches": ["<all_urls>"],
            "resources": ["fonts/*.ttf", "fonts/*.woff"]
        }
    ]
}
