{
    "name": "select-ai",
    "version": "0.0.5",
    "main": "none",
    "type": "module",
    "scripts": {
        "start": "webpack --config webpack.dev.cjs",
        "build": "webpack --config webpack.prod.cjs && npm run zip",
        "zip": "cd dist && zip -r ../dist-v$(jq -r '.version' ../package.json)-$(date +%Y%m%d%H%M).zip .",
        "lint": "eslint .",
        "version": "PACKAGE_VERSION=$(jq -r '.version' package.json) && echo $(jq --arg VERSION $PACKAGE_VERSION '.version=$VERSION' static/manifest.json) > static/manifest.json && git add static/manifest.json"
    },
    "keywords": [
        "chrome",
        "extension",
        "rephrase",
        "text",
        "ai",
        "web"
    ],
    "author": "beonma",
    "repository": {
        "type": "git",
        "url": "https://github.com/beonma/select-ai-chrome-extension.git"
    },
    "license": "UNLICENSED",
    "private": "true",
    "description": "SelectAI is a free Chrome extension that lets you instantly transform text with AI. Choose your preferred LLM (like ChatGPT, Claude, or others) to rewrite, refine, or expand any selected textâ€”effortlessly and at no cost.",
    "devDependencies": {
        "@babel/core": "^7.27.1",
        "@babel/preset-env": "^7.27.2",
        "@babel/preset-react": "^7.27.1",
        "@babel/preset-typescript": "^7.27.1",
        "@eslint/js": "^9.27.0",
        "@tailwindcss/postcss": "^4.1.7",
        "@types/chrome": "^0.0.323",
        "@types/react": "^18.3.13",
        "@types/react-dom": "^18.3.1",
        "autoprefixer": "^10.4.21",
        "babel-loader": "^10.0.0",
        "copy-webpack-plugin": "^13.0.0",
        "css-loader": "^7.1.2",
        "css-minimizer-webpack-plugin": "^7.0.2",
        "dotenv-webpack": "^8.1.0",
        "eslint": "^9.27.0",
        "eslint-config-prettier": "^10.1.5",
        "fork-ts-checker-webpack-plugin": "^9.1.0",
        "mini-css-extract-plugin": "^2.9.2",
        "postcss": "^8.5.3",
        "postcss-loader": "^8.1.1",
        "svg-inline-loader": "^0.8.2",
        "tailwindcss": "^3.4.16",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.32.1",
        "webpack": "^5.99.9",
        "webpack-bundle-analyzer": "^4.10.2",
        "webpack-cli": "^6.0.1",
        "webpack-merge": "^6.0.1"
    },
    "dependencies": {
        "@anthropic-ai/sdk": "^0.52.0",
        "@google/generative-ai": "^0.24.1",
        "@radix-ui/react-label": "^2.1.7",
        "@radix-ui/react-select": "2.2.5",
        "@radix-ui/react-slot": "^1.2.3",
        "@radix-ui/react-toast": "^1.2.14",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "groq-sdk": "^0.22.0",
        "lucide-react": "^0.511.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-router-dom": "^6.28.1",
        "tailwind-merge": "^3.3.0",
        "tailwindcss-animate": "^1.0.7"
    }
}
